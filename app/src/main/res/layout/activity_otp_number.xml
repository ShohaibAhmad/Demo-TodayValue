<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp_Number">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_style"
            android:gravity="center"
            android:padding="15dp"
            android:text="Verify Your Phone Number With Country Code"
            android:textColor="#FFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/OtpNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headline"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_style_4"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="3dp"
                android:hint="+00 ... Number With Country Code"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="#15205E"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

        <TextView
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/OtpNumber"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/border_style_2"
            android:gravity="center"
            android:text="Verify Now"
            android:textColor="#FFF"
            android:textSize="22dp" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/otppNumber"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminateTint="@color/main_color"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
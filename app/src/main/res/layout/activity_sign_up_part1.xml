<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_part_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="68dp">


        //////////////////name/////////

        <LinearLayout
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/border_style"
                android:gravity="center"
                android:padding="15dp"
                android:text="Enter Your First and Last Name"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/edit_border"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="15dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColorHint="#15205E" />


            <EditText
                android:id="@+id/LastName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/edit_border"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="15dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="15dp"

                android:textColorHint="#15205E" />


        </LinearLayout>


        //////////////////Name End////////


        //////////Date of birth //////////

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_marginTop="25dp"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/border_style"
                android:gravity="center"
                android:padding="15dp"
                android:text="Enter Your Date of Birth"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ShowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Select your date of birth"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="#15205E"

                />


            <Button
                android:id="@+id/dateButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Jan  01  2021"
                android:textSize="22sp"
                android:textColor="#15205E"
                style="?android:spinnerStyle"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="20dp"
                android:onClick="OpenDatePicker"
                />



            <TextView
                android:id="@+id/button1"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/border_style_2"
                android:gravity="center"
                android:text="Next"
                android:textColor="#FFF"
                android:textSize="25dp" />


        </LinearLayout>





    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>